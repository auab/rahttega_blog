<!--Artigos Mais Recentes-->
<h2 class="text-center mt-24">Textos mais recentes</h2>

<% unless @articles[0].nil? %>
  <div class="flex w-full-a justify-between p-8 m-auto items-center">
    <div class="w-2/5">
      <h3><%= @articles[0].title %></h3>
      <p><%= @articles[0].summary %></p>
    </div>
    <div>
      <% if @articles[0].photo.attached?  %>
        <%= cl_image_tag @articles[0].photo.key, width: 461, crop: :fill, :class =>"rounded-md" %>
      <% end %>
    </div>
  </div>
<% end %>

