<p style="color: green"><%= notice %></p>


<div class="article-content">
      <div class="article-show__column-header">
        <h1 class="article-show__title mb-5"><%= @article.title %></h1>
        <p class="article-show__summary"><%= @article.summary %></p>
        <div class="text-center">
          <% if @article.photo.attached?  %>
              <%= cl_image_tag @article.photo.key, width: 700, crop: :fill %>
          <% end %>
        <hr>
      </div>
      </div>
      <div class="article-show__side-div"></div>
      <div class="article-show__gap1-div"></div>
      <div class="article-show__content-div">
        <p><%= @article.content %>  </p>
          <hr style="width:700px;margin-left:auto;margin-right:auto;">
          <div class="article-form__secondary-links-div">
          <%= link_to "Editar artigo", edit_article_path(@article), class: "article-form__secondary-links" %> |
          <%= link_to "Voltar para artigos", root_path, class: "article-form__secondary-links" %> |
          <%= link_to "Deletar artigo", @article, method: :delete, class: "article-form__secondary-links" %>
        </div>
      </div>
      <div class="article-show__gap2-div"></div>
      <div class="article-show__rhs-div"></div>
      <div class="article-show__gap3-div"></div>


</div>
